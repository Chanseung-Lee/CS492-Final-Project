<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/mealContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Custom designed square icon with rounded edges -->
        <TextView
            android:id="@+id/text_icon_meal1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Apple Frangipan Tart"
            android:textSize="18sp"
            android:textColor="#4CAF50" />

        <TextView
            android:id="@+id/text_icon_meal2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Arrabiata"
            android:textSize="18sp"
            android:textColor="#4CAF50" />

        <!-- Add other icons or buttons as needed -->

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>